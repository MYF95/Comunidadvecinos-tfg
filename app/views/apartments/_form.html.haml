= render 'shared/error_message', object: f.object

.form-title
  %span= yield(:form_title)
  %hr
.form-group
  .row
    = f.label 'Piso', class: 'col-xs-12 col-sm-4 control-label'
    = f.number_field :floor, min: 0, class: 'col-xs-12 col-sm-4'
.form-group
  .row
    = f.label 'Letra', class: 'col-xs-12 col-sm-4 control-label'
    = f.text_field :letter, maxlength: 1, class: 'col-xs-12 col-sm-4'
.form-group
  .row
    = f.label 'Cuota', class: 'col-xs-12 col-sm-4 control-label'
    = f.number_field :fee, min: 0, class: 'col-xs-12 col-sm-4'
.form-group
  .row
    = f.label 'Contribuci√≥n de cuota a la comunidad (Valor entre 0 y 1)', class: 'col-xs-12 col-sm-8 col-sm-offset-2'
    = f.number_field :apartment_contribution, step: :any, min: 0, max: 1, class: 'col-xs-12 col-sm-4 col-sm-offset-4'
.form-group
  .row
    = f.submit yield(:button_text), class: 'col-xs-12 col-sm-4 col-sm-offset-4'