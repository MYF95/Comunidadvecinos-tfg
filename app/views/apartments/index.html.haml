- provide(:title, 'Viviendas')

.row
  .col-xs-12
    .page-header
      -if current_user.admin?
        %h1 Viviendas de la comunidad
      -else
        %h1 Mis viviendas
.inner-wrapper
  .row
    .col-xs-12
      -if current_user.admin?
        %p= link_to 'Crear vivienda', new_apartment_path, class: 'btn btn-primary'
  - if @apartment.nil? || @apartments.empty?
    %p No hay ninguna vivienda disponible.
  -else
    .row
      .col-xs-12
        .pagination
          = will_paginate @apartments, class: 'flickr_pagination'
    = render 'apartments/tables/index'
    .row
      .col-xs-12
        .pagination
          = will_paginate @apartments, class: 'flickr_pagination'
    .row
      .col-xs-12
        -if current_user.admin?
          %p= link_to 'Crear vivienda', new_apartment_path, class: 'btn btn-primary'