            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Pagos pendientes', pending_payments_path
            %li= link_to 'Generar pagos pendientes de cuotas', new_pending_payment_path
        %li= link_to 'Movimientos bancarios', movements_path
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Usuarios
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Ver mi perfil', user_profile_path(current_user)
            %li= link_to 'Ver usuarios', users_path
            %li.divider
            %li= link_to 'Logout', destroy_user_session_path, :method => :delete