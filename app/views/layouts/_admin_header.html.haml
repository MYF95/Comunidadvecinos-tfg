.container
  .navbar-header
    %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse-header", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a
      = link_to image_tag('vecinos-logo.png'), root_path, id: 'logo-image', class:'navbar-brand'
      = link_to 'Comunidad vecinos', root_path , id: 'logo', class: 'navbar-brand'
  #navbar-collapse-header.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li= link_to 'Viviendas', apartments_path
        %li= link_to 'Extractos bancarios', statements_path
