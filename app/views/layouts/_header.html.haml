.container
  .navbar-header
    %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse-header", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'Logo', root_path , id: 'logo', class: 'navbar-brand'
  #navbar-collapse-header.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right
      %li= link_to 'Home', root_path
      %li= link_to 'Help', help_path
      %li= link_to 'About', about_path
      %li.dropdown
        %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
          Viviendas
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'Viviendas', apartments_path
          %li= link_to 'Nueva vivienda', new_apartment_path
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Account
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Settings', edit_user_registration_path
            %li.divider
            %li= link_to 'Logout', destroy_user_session_path, :method => :delete
      - else
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            New user?
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Sign up', new_user_registration_path
            %li.divider
            %li= link_to 'Log in', new_user_session_path