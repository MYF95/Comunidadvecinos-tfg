.container
  .navbar-header
    %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse-header", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'Logo', root_path , id: 'logo', class: 'navbar-brand'
  #navbar-collapse-header.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li= link_to 'Viviendas', apartments_path
        %li= link_to 'Extractos bancarios', statements_path
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Pagos pendientes
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Pagos pendientes', pending_payments_path
            %li= link_to 'Nuevo pago pendiente', new_pending_payment_path
        %li= link_to 'Movimientos bancarios', movements_path
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Cuenta
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Ver perfil', user_path(current_user)
            %li.divider
            %li= link_to 'Logout', destroy_user_session_path, :method => :delete
      - else
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            New user?
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Registrarse', new_user_registration_path
            %li.divider
            %li= link_to 'Login', new_user_session_path