%h1 Datos del movimiento bancario "#{@movement.concept}"
%p= "Fecha movimiento: #{@movement.date}"
%p= "Fecha valor: #{@movement.date_value}"
%p= "Cantidad: #{@movement.amount}"
%p= "Divisa: #{@movement.currency_movement}"
%p= "Saldo posterior: #{@movement.post_balance}"
%p= "Divisa: #{@movement.currency_balance}"
%p= "Oficina: #{@movement.office}"
%p= "Concepto 1: #{@movement.concept1}"
%p= "Concepto 2: #{@movement.concept2}"
%p= "Concepto 3: #{@movement.concept3}"
%p= "Concepto 4: #{@movement.concept4}"
%p= "Concepto 5: #{@movement.concept5}"
%p= "Concepto 6: #{@movement.concept6}"
%p= "Descripción del administrador: #{@movement.description}"
%p= link_to 'Actualizar movimiento', edit_movement_path(@movement), class: 'btn btn-primary'

- unless @movement.children.empty?
  %hr
  %h2 Movimientos descendientes
  %table.table.table-hover.table-statement-movements
    %tr
      %th Concepto
      %th Fecha
      %th Cantidad
      %th Vivienda asociada
      %th Opciones
    -@movement.children.each do |movement|
      %tr
        %td= link_to "#{movement.child.concept}", movement_path(movement.child)
        %td= "#{movement.child.date}"
        %td= "#{movement.child.amount}€"
        %td= "#{movement.child.description}"
        %td
          - if movement.child.apartment.blank?
            = link_to 'Asociar a vivienda', apartmentlist_path(movement.child)
          - else
            = link_to "#{full_name_apartment(movement.child.apartment)}", apartment_path(movement.child.apartment)
        %td
          -#= link_to divide_path(@statement, movement), class: 'btn btn-xs btn-success' do
          -#  %span.glyphicon.glyphicon-scissors
          = link_to edit_movement_path(movement.child), class: 'btn btn-xs btn-primary' do
            %span.glyphicon.glyphicon-pencil
          = link_to movement.child, method: :delete, data: { confirm: '¿Quieres borrar el movimiento bancario?'}, class: 'btn btn-xs btn-danger' do
            %span.glyphicon.glyphicon-trash