- provide(:title, 'Crear pago pendiente')
- provide(:button_text, 'Crear pago pendiente')

%h2 Crea un nuevo pago pendiente
= form_for(@pending_payment) do |f|
  = render 'shared/error_message', object: f.object
  .field
    = f.label 'Concepto'
    %br/
    = f.text_field :concept, autofocus: true
  .field
    = f.label 'Fecha'
    %br/
    = f.date_field :date
  .field
    = f.label 'Cantidad'
    %br/
    = f.number_field :amount, min: 0
  .field
    = f.label 'Description'
    %br/
    = f.text_field :description
  .field
    = f.label 'Viviendas a la que asociar el pago pendiente'
    %br/
    - @apartments.each do |apartment|
      = f.label "#{full_name_apartment(apartment)}"
      = f.check_box :apartment, {multiple: true}, apartment.id, false
      %br/
  .actions
    = f.submit yield(:button_text)