- provide(:title, 'Actualizar extracto bancario')

.row
  .col-xs-12
    .page-header
      %h1= "Actualizar extracto bancario #{@statement.name}"
.inner-wrapper
  .row
    .col-xs-12.col-md-8.col-md-offset-2
      .form-box
        = form_for(@statement) do |f|
          = render 'shared/error_message', object: f.object
          .form-title
            %span= 'Actualizar extracto'
            %hr
          .form-group
            .row
              = f.label 'Nombre', class: 'col-xs-12 col-sm-4 control-label'
              = f.text_field :name, class: 'col-xs-12 col-sm-4'
          .form-group
            .row
              = f.label 'Fecha', class: 'col-xs-12 col-sm-4 control-label'
              = f.date_field :date, class: 'col-xs-12 col-sm-4'
          .form-group
            .row
              = f.submit 'Actualizar extracto', class: 'col-xs-12 col-sm-6 col-sm-offset-3'