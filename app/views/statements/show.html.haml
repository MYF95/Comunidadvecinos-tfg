%h1= "Estos del extracto bancario #{@statement.name}"
%p= "Nombre del extracto: #{@statement.name}"
%p= "Fecha del extracto: #{@statement.date}"
%p= link_to 'Actualizar extracto', edit_statement_path(@statement), class: 'btn btn-primary'
%p= link_to 'Crear movimiento', new_statement_movement_path(@statement), class: 'btn btn-primary'

.container
  %h2= 'Movimientos del extracto'
  %table.table.table-hover
    %tr
      %th Concepto
      %th Fecha
      %th Cantidad
      %th Descripción
      %th Vivienda asociada
      %th Opciones
    -@statement.movements.each do |movement|
      %tr
        %td= "#{movement.concept}"
        %td= "#{movement.date}"
        %td= "#{movement.amount}€"
        %td= "#{movement.description}"
        %td
          - if movement.apartment.blank?
            = link_to 'Asociar a vivienda', apartmentlist_path(movement)
          - else
            = link_to "#{full_name_apartment(movement.apartment)}", apartment_path(movement.apartment)
        %td= link_to 'Dividir cantidad', divide_path(@statement, movement)
%p= @statement.bank_statement